<div class="row">

  {{! Login form (col 1) }}

  <div class="container">
    <h3 class="section-title">Login</h3>
    <form class="login-form">
      <div class="col s12">
        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Email" id="email-login" type="text" id="email-login" class="validate">
          </div>
          <div class="input-field col s6">
            <input placeholder="Password" type="text" id="password-login" class="validate">
          </div>
          <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>


  {{! Signup form (col 2) }}

  <div class="container">
    <h3 class="section-title">Signup</h3>
    <form class="login-form">
      <div class="col s12">
        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Name" id="email-login" type="text" id="name-signup" class="validate">
          </div>
          <div class="input-field col s6">
            <input placeholder="Password" type="text" id="password-signup" class="validate">
          </div>
          <div class="input-field col s6">
            <input placeholder="Email" type="text" id="email-signup" class="validate">
          </div>
          <div class="input-field col s6">
            <input placeholder="Confirm Password" type="text" id="password-signup" class="validate">
          </div>
          <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>


</div>

<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>