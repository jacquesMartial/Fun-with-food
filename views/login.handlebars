<div class="row container">

  {{! Login form (col 1) }}

  <h3 class="section-title">Login</h3>
  <form class="login-form">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Email" id="email-login" type="text" id="email-login" class="validate">
        </div>
        <div class="input-field col s6">
          <input placeholder="Password" type="text" id="password-login" class="validate">
        </div>
        <div class="col s12">
          <button class="waves-effect waves-light btn-large" type="submit" name="action">Login
            <i class="material-icons left">login</i>
          </button>
        </div>
      </div>
    </div>
  </form>


  {{! Signup form (col 2) }}

  <h3 class="section-title">Signup</h3>
  <form class="signup-form">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Name" type="text" id="name-signup" class="validate">
        </div>
        <div class="input-field col s6">
          <input placeholder="Password" type="text" id="password-signup" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Email" type="text" id="email-signup" class="validate">
        </div>
        <div class="input-field col s6">
          <input placeholder="Confirm Password" type="text" id="password-signup-confirm" class="validate">
        </div>

        <div class="col s12">
          <button class="waves-effect waves-light btn-large" name="action">Signup
            <i class="material-icons left">create</i>
          </button>
        </div>
      </div>
    </div>
</div>
</form>


</div>

<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>